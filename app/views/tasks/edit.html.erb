<div class="container">
  <h1>Edit a task</h1>
  <%= form_with model: @task do |f|%>
    <%= f.label :title, class:"form-label" %>
    <%= f.text_field :title, class: "form-control"%>
    <%= f.label :details, class:"form-label" %>
    <%= f.text_field :details, class:"form-control"%>
    <div class="form-check mt-4">
      <%= f.check_box :completed, class: "form-check-input" %>
      <%= f.label :completed, class: "form-check-label" %>
    </div>
    <%= f.submit class: "btn btn-primary mt-4"%>
  <% end %>
  <%= link_to 'Back to de List', tasks_path, class:"btn btn-secondary mt-4" %>
</div>